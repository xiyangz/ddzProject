<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ddz_login1"
    tools:context=".MainActivity" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_alignParentBottom="true"
         >

        <Button
            android:id="@+id/selectPhotoBtn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:background="#eec591"
            android:onClick="selectAndCheck"
            android:text="人脸登录">

        </Button>

        <Button
            android:id="@+id/usualLoginBtn"
            android:layout_width="300dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:text="账号密码登录"
            android:layout_marginBottom="30dp"
            android:background="#eead0e"
            android:onClick="usualLogin"
            android:layout_below="@+id/selectPhotoBtn">

        </Button>

        <Button
            android:id="@+id/registerBtn"
            android:layout_width="300dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_below="@id/usualLoginBtn"
            android:text="注册"
            android:onClick="registerAndUpload"
            android:layout_marginBottom="30dp"
            android:background="#ee9a00"

            ></Button>




    </RelativeLayout>

</RelativeLayout>